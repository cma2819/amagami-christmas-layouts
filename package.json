{
  "name": "amagami-christmas-layouts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:browser": "vite build",
    "build:extension": "tsc --project ./src/extension/tsconfig.json",
    "dev": "run-p dev:*",
    "dev:browser": "vite",
    "dev:extension": "npm run build:extension -- --watch",
    "lint": "eslint",
    "schema-types": "nodecg schema-types -o ./src/nodecg/generated",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "nodecg": {
    "compatibleRange": "^1.9.0 || ^2.0.0",
    "dashboardPanels": [
      {
        "name": "scene-select",
        "title": "シーン選択",
        "width": 4,
        "file": "scene-control.html"
      },
      {
        "name": "player-control",
        "title": "プレイヤー情報",
        "width": 4,
        "file": "players.html"
      }
    ],
    "graphics": [
      {
        "file": "obs-control.html",
        "width": "1920",
        "height": "1080",
        "singleInstance": true
      },
      {
        "file": "character-overlay.html",
        "width": "1920",
        "height": "1080",
        "singleInstance": false
      },
      {
        "file": "all-view.html",
        "width": "1920",
        "height": "1080",
        "singleInstance": false
      },
      {
        "file": "character-view.html",
        "width": "1600",
        "height": "960",
        "singleInstance": false
      },
      {
        "file": "solo-view.html",
        "width": "1600",
        "height": "960",
        "singleInstance": false
      },
      {
        "file": "love-button.html",
        "width": "320",
        "height": "400",
        "singleInstance": false
      }
    ],
    "assetCategories": [
      {
        "name": "stands",
        "title": "立ち絵",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "icons",
        "title": "アイコン",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "ico"
        ]
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/lodash.clone": "^4.5.9",
